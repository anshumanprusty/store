<script type="text/javascript">
  $(function(){
      listOrders();
  });

  function listOrders() {

     var order_url = "/orders/list";

      $.ajax({
        //options.async = true;
        url: order_url,
        type: 'get',
        success: function(data) {
            if(data!=null && data.length>0){
              $("#orderlist").html('');
              $.each(data,function(index,key){
                alert(index);
                $("#orderlist").append("<tr><td>"+key.quantity+"</td><td>"+key.totalprice+"</td><td><span onclick=ShowOrder("+key.id+")>Show</span></td><td><span onclick=EditOrder("+key.id+")>Edit</span></td><td><span onclick=DeleteOrder("+key.id+")>Destroy</span></td></tr>");


              })

                  }
                }
      });
}
